mixin quote-classic( obj )
	.quote-classic
		.quote-classic-body
			q= obj.text
		.quote-classic-footer.unit.unit-spacing-md
			.unit-left
				+img( obj.img ).quote-classic-photo.rounded-circle
			.unit-body
				.quote-classic-name= obj.name
				.quote-classic-position= obj.position

mixin quote-corporate( obj )
	.quote-corporate.novi-bg&attributes( attributes )
		.quote-corporate-body
			q(class=obj.headingClass ? obj.headingClass : 'heading-5')= obj.text
		.quote-corporate-footer.unit.unit-spacing-md
			.unit-left
				+img( obj.img ).quote-corporate-photo.rounded-circle
			.unit-body
				.quote-corporate-name= obj.name
				.quote-corporate-position= obj.position ? obj.position : 'Regular client'

