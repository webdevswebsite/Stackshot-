mixin quote-christmas( obj )
	.quote-christmas
		.quote-christmas-body
			q.heading-6= obj.text
			+icon-quote-christmas
		.quote-christmas-footer
			.unit.unit-spacing-md.align-items-center
				.unit-left
					+img( obj.img ).quote-christmas-image
				.unit-body
					h6.quote-christmas-name= obj.name
					.quote-christmas-date.small= obj.date
