//- Bootstrap Card
	@param {object}  obj           - card object
	@param {boolean} obj.show      - is card not collapsed
	@param {string}  obj.parentId  - parent accordion id
	@param {string}  obj.title     - card title
mixin card( obj )
	-
		var
			headId = obj.parentId +'-card-head-'+ randomStr(8),
			bodyId = obj.parentId +'-card-body-'+ randomStr(8);

	//Bootstrap card
	article.card.card-custom&attributes( attributes )
		.card-header( role='tab' )
			.card-title
				a( id= headId, data-toggle='collapse', data-parent='#'+ obj.parentId, href='#'+ bodyId, aria-controls= bodyId, aria-expanded= Boolean( obj.show ).toString(), class={ collapsed: !obj.show }, role='button' )
					-if ( obj.cardIcon )
						img.card-icon( src='images/' + obj.cardIcon, alt='' )
					= obj.title
					- if ( obj.subtitle )
						span.card-subtitle= obj.subtitle
					.card-arrow

		.collapse( id= bodyId, aria-labelledby= headId, data-parent='#'+ obj.parentId, class={ show: obj.show }, role='tabpanel' )
			.card-body
				block


mixin card-event( obj )
	.row.row-fix.row-30.justify-content-center.card-event&attributes( attributes )
		.col-sm-10.col-md-8.col-lg-4
			+img( obj.img ).card-event-image
		.col-sm-10.col-md-8.col-lg-8
			.card-event-body
				.card-event-content
					h4.card-event-title: a(href='#')= obj.title
					p.big.card-event-text= obj.text
					.card-event-details
						+icon-clock
						p= obj.details
				.card-event-button
					a.button.button-primary.button-nuka( href='#' ) Learn More
						span.button-overlay

mixin card-activity( obj )
	.card-activity.row.row-fix.row-30.align-items-center.justify-content-center&attributes( attributes )
		.col-md-10.col-lg-6
			+img( obj.img ).card-activity-image
		.col-md-10.col-lg-6
			.card-activity-body
				h4.card-activity-title: a( href='#' )= obj.title
				p.big.card-activity-text= obj.text
				.card-activity-details
					+icon-clock
					p= obj.details
